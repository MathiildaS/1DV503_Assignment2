<h1>Congratulations to your purchase!</h1>

<div class="invoice-details">
<table>
  <tbody>
    <tr>
      <th>Order number</th>
      <td><%= order.ono %></td>
    </tr>
    <tr>
      <th>Order date</th>
      <td><%= new Date(order.orderCreated).toLocaleDateString() %></td>
    </tr>
    <tr>
      <th>Delivery date</th>
      <td><%= new Date(order.deliveryDate).toLocaleDateString() %></td>
    </tr>
    <tr>
      <th>Delivery address</th>
      <td>
        <%= order.shipAddress %><br>
        <%= order.shipZip %> <%= order.shipCity %>
      </td>
    </tr>
  </tbody>
</table>
</div>

<div class="invoice-details">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Price</th>
      <th>Qty</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% booksInCart.forEach(book => { %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td>$<%= Number(book.price).toFixed(2) %></td>
        <td><%= book.qty %></td>
        <td>$<%= Number(book.amount).toFixed(2) %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
</div>

<h3>Total: $<%= Number(totalPrice).toFixed(2) %></h3>

<a class="btn" href="/books">Continue shopping</a>
