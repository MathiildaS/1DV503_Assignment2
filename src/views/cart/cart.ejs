<h1>Your Cart</h1>

<% if (!booksInCart || booksInCart.length === 0) { %>
  <h3>Your cart is empty.</h3>
  <a class="btn" href="/books">Add some books to your cart!</a>
<% } else { %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% booksInCart.forEach(book => { %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.isbn %></td>
          <td>$<%= Number(book.price).toFixed(2) %></td>
          <td><%= book.qty %></td>
          <td>$<%= Number(book.amount).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h3>Total Price: $<%= Number(totalPrice).toFixed(2) %></h3>

  <form action="/cart/checkout" method="POST">
    <button class="btn" type="submit">Checkout</button>
  </form>

<% } %>
