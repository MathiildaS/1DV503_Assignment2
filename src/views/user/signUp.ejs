<h2>Sign up to start shopping for books!</h2>
<section class="form-container">
  <form action="./user/signUp" method="POST">
    <label for="fname">First Name:</label>
    <input type="text" id="fname" name="fname" required maxlength="50" placeholder="Enter your first name">
    
    <label for="lname">Last Name:</label>
    <input type="text" id="lname" name="lname" required maxlength="50" placeholder="Enter your last name">
    
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required maxlength="50" placeholder="Street address">
    
    <label for="city">City:</label>
    <input type="text" id="city" name="city" required maxlength="30" placeholder="City">
    
    <label for="zip">Zip Code:</label>
    <input type="number" id="zip" name="zip" required placeholder="Zip code">
    
    <label for="phone">Phone Number:</label>
    <input type="tel" id="phone" name="phone" required maxlength="15" placeholder="Phone number">
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required maxlength="40" placeholder="your.email@example.com">
    
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required minlength="6" maxlength="200" placeholder="Choose a password">
    
    <button type="submit" class="btn">Sign Up!</button>
  </form>
  <p>Do you already have an existing account? <a href="./user/logIn" class="btn">Log in here!</a></p>
</section>